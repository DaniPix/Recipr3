<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/authentication_padding"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            style="@style/AppTheme.DefaultEditText"
            android:ems="10"
            android:inputType="text"
            android:labelFor="@+id/username" />

        <EditText
            android:id="@+id/password"
            style="@style/AppTheme.DefaultEditText"
            android:ems="10"
            android:inputType="textPassword"
            android:labelFor="@+id/password" />

        <Button
            android:id="@+id/authenticateWithAccount"
            style="@style/AppTheme.DefaultButton"
            android:layout_width="@dimen/authentication_button_width"
            android:layout_height="@dimen/authentication_button_height"
            android:text="@string/authenticate_with_account" />

        <Button
            android:id="@+id/authenticateWithToken"
            style="@style/AppTheme.DefaultButton"
            android:layout_width="@dimen/authentication_button_width"
            android:layout_height="@dimen/authentication_button_height"
            android:text="@string/authenticate_with_token" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>